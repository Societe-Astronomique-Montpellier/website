{
  "format": "page",
  "id": "page_article",
  "label": "Page article",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Titre",
          "placeholder": ""
        }
      },
      "subtitle": {
        "type": "Text",
        "config": {
          "label": "Sous-titre",
          "placeholder": ""
        }
      },
      "thematic": {
        "type": "Link",
        "config": {
          "label": "Thématique",
          "select": "document",
          "customtypes": ["page_thematique"]
        }
      },
      "title_vignette": {
        "type": "Text",
        "config": {
          "label": "Titre (court) de vignette",
          "placeholder": "Titre pour vignette"
        }
      },
      "image_vignette": {
        "type": "Image",
        "config": {
          "label": "Vignette (page d'accueil)",
          "constraint": {},
          "thumbnails": [
            {
              "name": "vignette",
              "width": 780,
              "height": 520
            },
            {
              "name": "mobile",
              "width": 320,
              "height": 212
            }
          ]
        }
      },
      "image_banner": {
        "type": "Image",
        "config": {
          "label": "Bannière",
          "constraint": {},
          "thumbnails": [
            {
              "name": "banner",
              "width": 1280,
              "height": 450
            },
            {
              "name": "mobile",
              "width": 640,
              "height": 225
            }
          ]
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Contenu",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "carrousel": {
        "type": "Boolean",
        "config": {
          "label": "Images carrousel",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Auteur",
          "placeholder": ""
        }
      },
      "position": {
        "type": "Number",
        "config": {
          "label": "Position",
          "placeholder": "Position de la page dans l'arborescence"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "label": "Meta Image",
          "constraint": {
            "height": 630,
            "width": 1200
          },
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
